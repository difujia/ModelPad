<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="5dp" />

    <solid android:color="@color/white" />

    <stroke
        android:dashGap="@dimen/border_stroke_dashgap"
        android:dashWidth="@dimen/border_stroke_dashwidth"
        android:width="@dimen/border_stroke_width"
        android:color="@color/greenlight" />

    <padding
        android:bottom="@dimen/section_padding"
        android:left="@dimen/section_padding"
        android:right="@dimen/section_padding"
        android:top="@dimen/section_padding" />

</shape>