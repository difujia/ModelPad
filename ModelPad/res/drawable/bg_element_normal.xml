<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/grey" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/touchable" />

            <padding
                android:bottom="@dimen/element_padding"
                android:left="@dimen/element_padding"
                android:right="@dimen/element_padding"
                android:top="@dimen/element_padding" />
        </shape>
    </item>

</layer-list>